{
  "openapi": "3.1.0",
  "info": {
    "title": "LMS Hammercode",
    "description": "Documentation whole API in this project",
    "version": "1.0.0"
  },

  "servers": [
    {
      "url": "http://localhost:8000/api/v2/",
      "description": "localhost"
    }
  ],
  "tags": [
    {
      "name": "Module",
      "description": "API Module"
    }
  ],
  "paths": {
    "/admins/Modules/{courseId}": {
      "post": {
        "tags": ["Module"],
        "summary": "Create Module",
        "description": "create module for the course",
        "parameters": [
          {
            "$ref": "#/components/parameters/CourseId"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestModules"
              },
              "examples": {
                "user": {
                  "value": {
                    "title_module": "introduction html",
                    "description_module": "lorem ipsum"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "examples": {
                  "success": {
                    "value": {
                      "status": true,
                      "message": "success create module"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["Module"],
        "summary": "Update Module",
        "description": "update module for the course",
        "parameters": [
          {
            "$ref": "#/components/parameters/CourseId"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestModules"
              },
              "examples": {
                "user": {
                  "value": {
                    "title_module": "introduction html",
                    "description_module": "lorem ipsum"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "examples": {
                  "success": {
                    "value": {
                      "status": true,
                      "message": "success update module"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/modules/{courseId}": {
      "get": {
        "tags": ["Module"],
        "summary": "Get All Modules",
        "description": "Get all Modules by Course id ",
        "parameters": [
          {
            "$ref": "#/components/parameters/CourseId"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AllModules"
                }
              }
            }
          }
        }
      }
    },
    "/modules/{courseId}/{moduleId}": {
      "get": {
        "tags": ["Module"],
        "summary": "Get Detail Modules",
        "description": "Get Detail Modules by Course id & module id ",
        "parameters": [
          {
            "$ref": "#/components/parameters/CourseId"
          },
          {
            "$ref": "#/components/parameters/ModuleId"
          }
        ],
        "responses": {
          "200": {
            "description": "success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DetailModule"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      }
    },
    "schemas": {
      "RequestLogin": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        },
        "required": ["email", "password"]
      },
      "RequestRegister": {
        "type": "object",
        "properties": {
          "user_name": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "confirm_password": {
            "type": "string"
          }
        },
        "required": ["user_name", "email", "password", "confirm_password"]
      },
      "RequestModules": {
        "type": "object",
        "properties": {
          "title_module": {
            "type": "string"
          },
          "description_module": {
            "type": "string"
          }
        },
        "required": ["title_module", "description_module"]
      },
      "AllModules": {
        "type": "object",
        "properties": {
          "course_id": {
            "type": "string"
          },
          "modules": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "title_module": {
                "type": "string"
              },
              "description_module": {
                "type": "string"
              }
            }
          }
        }
      },
      "DetailModule": {
        "id": {
          "type": "string"
        },
        "title_module": {
          "type": "string"
        },
        "description_module": {
          "type": "string"
        }
      }
    },
    "parameters": {
      "CourseId": {
        "name": "courseId",
        "in": "path",
        "description": "id of course",
        "required": true,
        "schema": {
          "type": "string"
        },
        "examples": {
          "course": {
            "value": "course-A1"
          }
        }
      },
      "ModuleId": {
        "name": "moduleId",
        "in": "path",
        "description": "id of module",
        "required": true,
        "schema": {
          "type": "string"
        },
        "examples": {
          "course": {
            "value": "module-A1"
          }
        }
      }
    }
  }
}
